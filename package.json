    "start": "NODE_ENV=production node server/index.js",
    "test": "NODE_ENV=test jest",
    "test:ci": "NODE_ENV=test ./node_modules/.bin/jest"
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "git add"
    ]
  },
